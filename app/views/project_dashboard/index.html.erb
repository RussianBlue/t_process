<div class="page-content">
	<%= render 'layouts/project_title' %>
	<div class="widget-box widget-color-blue">
		<div class="widget-header">
			<h5 class="widget-title bigger lighter">
				<i class="ace-icon fa fa-table"></i>
				공지사항
			</h5>
			<%= render 'layouts/table_color' %>
		</div>

		<div class="widget-body">
			<div class="widget-main no-padding">
				<table class="table table-striped table-bordered table-hover">
					<thead class="thin-border-bottom">
						<th></th>
						<th>게시판</th>
						<th>머리말</th>
            <th>제 목</th>
            <th><i class="ace-icon fa fa-user"></i> 작성자</th>
            <th>작성일</th>
            <th><i class="ace-icon fa fa-check"></i>조회수</th>
					</thead>
					<tbody id="project_table">
						<% @notice_boards.each do |board| %>
            	<%= render partial: 'layouts/table_dashboard_row', locals: {board: board} %>
            <% end %>
          </tbody>
				</table>
			</div>
		</div>
	</div>

	<div class="space-8"></div>

	<div class="widget-box widget-color-purple">
		<div class="widget-header">
			<h5 class="widget-title bigger lighter">
				<i class="ace-icon fa fa-exclamation"></i>
				새글목록
			</h5>
			<%= render 'layouts/table_color' %>
		</div>

		<div class="widget-body">
			<div class="widget-main no-padding">
				<table class="table table-striped table-bordered table-hover">
					<thead class="thin-border-bottom">
						<th>과정명</th>
						<th>게시판</th>
						<th>머리말</th>
            <th>제목</th>
            <th><i class="ace-icon fa fa-user"></i> 작성자</th>
            <th>작성일</th>
            <th><i class="ace-icon fa fa-check"></i>조회수</th>
					</thead>
					<tbody id="project_table">
						<% @new_boards.each do |board| %>
							<%= render partial: 'layouts/table_dashboard_row', locals: {board: board} %>
            <% end %>
          </tbody>
				</table>
			</div>
		</div>
	</div>
</div>