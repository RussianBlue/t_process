<div class="page-content">
  <%= render 'layouts/project_title' %>
  <div class="space-12"></div>  
  <h3 class="header smaller lighter green">스케쥴 <small> calendar</small> </h3>
  <div class="space-4"></div>
  
  <div class="row">
    <div class="col-xs-12">
      <div class"add-top-btn">
        <%= link_to '새로운 이벤트 생성', 'javascript:void()', id: 'new_event', :class => 'btn btn-sm btn-primary' %>
      </div>
      <div class="space-4"></div>
      <div>
        <div class='calendar'></div>
      </div>
      
      <div id="event_desc_dialog" class="dialog" style="display:none;">
        
      </div>

      <div id="create_event_dialog" class="dialog" style ="display:none;">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="myModalLabel">이벤트 생성하기</h4>
            </div>
            <%= render 'form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  window.project_id = "<%=j params[:project_id] %>";
<% end %>

<script>
  $(document).ready(function(){
    $('.calendar').fullCalendar(full_calendar_options);
    // page is now ready, initialize the calendar...
    $('#new_event').click(function(event) {
      FullcalendarEngine.Form.display()
      event.preventDefault();
    });
  });
</script>
