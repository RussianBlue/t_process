<%= form_for @event, :url => {:action => 'update'}, :html => { :id => 'event_form' } do |f| %>
<div class="form-margin">
  <div class="form-group">
    <%=f.label :title, '새로운 이벤트 명', :class => 'form-label events' %>
    <%=f.text_field :title, :class => 'form-control' %>
  </div>
  
  <div class="form-group">
    <%=f.label :description, '설명', :class => 'form-label events' %>
    <%=f.text_area :description, :rows => 4, :cols => 30, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%=f.label :starttime, '<i class="fa fa-calendar bigger-110"></i> 시작시간'.html_safe, :class => 'form-label events' %>    
    <%=f.datetime_select :starttime, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%=f.label :endtime, '<i class="fa fa-calendar bigger-110"></i> 종료시간'.html_safe, :class => 'form-label events'  %>
    <%=f.datetime_select :endtime, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%=f.label :all_day, '하루종일 이벤트로 설정하시려면 체크하세요', :class => 'form-label text-danger'  %>
    <%=f.check_box :all_day, :class => 'form-control' %>
  </div>
</div>

<%=f.hidden_field :commit_button, :value => ""%>
  <p>
    <%if @event.event_series -%>
      <%=f.submit 'Update Only This Occurrence', :onclick => "document.getElementById('event_commit_button').value = this.value"%>
      <%=f.submit 'Update All Occurrence', :onclick => "document.getElementById('event_commit_button').value = this.value"%>
      <%=f.submit 'Update All Following Occurrence', :onclick => "document.getElementById('event_commit_button').value = this.value"%>
    <%else-%>
      <%=f.submit '업데이트하기', :class => 'form-control btn btn-primary btn-sm', :onclick => "document.getElementById('event_commit_button').value = this.value"%>
    <%end-%>
    
    <span id = "updating_events" class="spinner" style = "display:none;">Updating, Please wait...</span>
  </p>
<%end %>