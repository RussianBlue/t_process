<div class="page-content">
  <div class="space-8"></div>
  <div class="page-header">
    <h1>
      접근관리
      <small>
        <i class="ace-icon fa fa-hand-o-right"></i>
        IP Firewall
      </small>
    </h1>
  </div><!-- /.page-header -->
  <div class="row">
    <div class="col-xs-12">
      <div class="table">
      <table id="table" class="table table-striped table-bordered table-hover" data-role="table">
        <thead class="dark-purple">
          <tr>
            <th>등록 IP</th>
            <th>접속 허용 여부</th>
            <th>관리</th>
          </tr>
        </thead>
        <tbody>
          <% @firewalls.each do |firewall| %>
            <tr>
              <td><%= firewall.remote_ip %></td>
              <td><%= firewall.ip_access %></td>
              <td>
                <%= link_to '<i class="ace-icon fa fa-pencil-square bigger-130"></i>'.html_safe, edit_firewall_path(firewall),
                                  :class           => 'green',
                                  'data-rel'       => 'tooltip', 
                                  'data-toggle'    => "modal", 
                                  'data-placement' => "bottom", 
                                  'title'          => "수정하기"
                %>
                <%= link_to '<i class="ace-icon fa fa-trash-o bigger-130"></i>'.html_safe, 
                    firewall, 
                    method: :delete, 
                    data: { confirm: '삭제하시겠습니까?' }, 
                    :class           => 'red',                          
                    'data-rel'       => 'tooltip', 
                    'data-toggle'    => "tooltip", 
                    'data-placement' => "bottom", 
                    'title'          => "삭제"
                %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="div-bottom-btnset">
  <%= link_to '등록하기', new_firewall_path, :class => 'btn btn-sm btn-primary' %>
</div>

