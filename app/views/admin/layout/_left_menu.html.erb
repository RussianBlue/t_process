<script type="text/javascript">
	var _loc = document.location.href
	var _arr = ["user_role", "firewall","boards","projects","curriculums","messagess"]

	setDefault();

	if(_loc.indexOf("user_role") != -1){
		$('.user_role').addClass("active");
	}else if(_loc.indexOf("user_approval") != -1){
		$('.user_role').addClass("active");
	}else if(_loc.indexOf("firewalls") != -1){
		$('.firewalls').addClass("active");
	}else{
		var tmp = "."+_arr[find_location()];
		$(tmp).addClass("active");
	}

	function find_location(){
		var stmp = 0;

		for(i=0; i<_arr.length; i++){
			if(_loc.indexOf(_arr[i]) != -1){
				stmp = i;
				break;
			}
		}
		return stmp;
	}

	function setDefault()
	{
		for(i=0; i<_arr.length; i++){
			$("."+_arr[i]).removeClass("active");
		}
	}

</script>