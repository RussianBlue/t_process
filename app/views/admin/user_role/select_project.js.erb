$('#form-field-select-2').html("<%=j render partial: 'admin/user_role/curriculum_select', locals:{:project_id => @project_id} %>")
$('#form-field-select-2').find('option').each(function(){
  $(this).dblclick(function(event) {
    var val = $(this).val();
    
    $.ajax({ 
    	url: '/user_role/edit/add_curriculum/'+ val,
    	success:function(data){
    		if(data.indexOf("append") == -1){
    			alert("이미 등록된 과정입니다.")
    		}
    	},
    	error:function(request, status){
    		
    	}
    });
  });
});