<div class="page-content">
  <div class="space-8"></div>
  <div class="page-header">
    <h1>
      사용자 과정 관리 <small></small>
    </h1>
  </div><!-- /.page-header -->
  
  <%= form_for(@user, :url => {
    :action => 'update'}, :html => { :role => 'form'}) do |f| %>
    <div class="col-xs-12 col-sm-12">
      <div class="widget-box">
        <div class="widget-body">
          <div class="widget-main">
            <h4 class="page-header blue"><i class="ace-icon fa fa-hand-o-right purple"></i> 현재 사용자 : <%= @user.name %>, <%= @user.email %></h4>
            <h4 class="page-header blue"><i class="ace-icon fa fa-hand-o-right purple"></i> 사용자 승인여부:</h4>
            <%= f.select :approval, User::APPROVAL_TYPES, :class=> 'form-control' %>
            <div class="space-8"></div>

            <h4 class="page-header blue"><i class="ace-icon fa fa-hand-o-right purple"></i> 사용자 권한부여:</h4>
            <%= if current_user.authorize == "super"
              f.select :authorize, User::SUPER_AUTHORIZE_TYPES, :class=> 'form-control'
            else
              f.select :authorize, User::AUTHORIZE_TYPES, :class=> 'form-control'
            end %>
            <div class="space-4"></div>

            <div class="div-bottom-btnset">
             <%= button_tag '수정하기', :type => 'submit',
                          :class => 'btn btn-pink btn-sm' %>
             <%= link_to '사용자 목록보기', user_approval_path,
                          :class => 'btn btn-primary btn-sm' %>
            </div>
          </div>
        </div>
      </div><!-- widget-box end -->
    </div>
  <% end %>
</div>

<script type="text/javascript">
  jQuery(function($) {    
    $('.chosen-select').chosen({allow_single_deselect:true}); 
    //resize the chosen on window resize
    $(window).on('resize.chosen', function() {
      var w = $('.chosen-select').parent().width();
      $('.chosen-select').next().css({'width':w});
    }).trigger('resize.chosen');
  
    $('#chosen-multiple-style').on('click', function(e){
      var target = $(e.target).find('input[type=radio]');
      var which = parseInt(target.val());
      if(which == 2) $('#form-field-select-4').addClass('tag-input-style');
       else $('#form-field-select-4').removeClass('tag-input-style');
    });

    $('#form-field-select-3').change(function(event) {
      var val = Number($(this).find("option:selected").val());

      $.ajax({ url: '/user_role/edit/select_project/'+ val });
    });

    $('.curriculum_trash').css("cursor", "pointer");
    $('.curriculum_trash').click(function(event) {
      var val = $(this).attr("id").split("remove_curriculum_")[1];
      
      $.ajax({ url: '/user_role/edit/remove_curriculum/'+ val });
    }); 
  });
</script>



