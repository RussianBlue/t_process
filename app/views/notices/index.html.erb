<div class="page-content">
	<%= render 'layouts/project_title' %>
	<div class="space-12"></div>
	
	<h3 class="header smaller lighter green"><%= current_category.name %> <small>글목록</small> </h3>
	
	<div class="row">
		<div class="col-xs-12">
			<%= form_tag '', :method => 'get', :id => "notices_search", :class => 'form-search' do %>
		    <div class="row">
		      <div class="col-sm-8 col-xs-6">
		        <div class="input-group">
		          <%= text_field_tag :search, params[:search], :class => 'form-control search-query', :placeholder => '작성자를 입력하세요.' %>
		          <span class="input-group-btn">
		            <%= button_tag(:type => "submit", :class => 'btn btn-purple btn-sm') do %>
		              <i class='icon-search fa fa-plus bigger-110'></i> 검색
		            <% end %>
		          </span>
		        </div>
		      </div>
		    </div>
		  <% end %>

		  <div class="space-8"></div>

		  <div class="table">
			  <table id="sample-table-1" class="table table-striped table-bordered table-hover">
			    <thead class="dark-purple">
			      <tr>
			        <th class="center">글 번호</th>
			        <th class="center">머릿말</th>
			        <th class="center">제목</th>
			        <th class="center">첨부파일</th>
			        <th class="center">작성자</th>
			        <th class="center">작성일</th>
			        <th class="center">조회수</th>
			      </tr>
			    </thead>

			    <tbody>
			      <% @boards.each do |board| %>
			        <%= render partial: 'notice_row', locals: {board: board} %>
			      <% end %>
			    </tbody>
			  </table>
			  </div>
			  <div class="div-bottom-btnset">
			    <%= link_to '글쓰기', new_notice_path,
			                :class => 'btn btn-primary btn-sm' %>
			  </div>

			  <div class="center">
			    <%= will_paginate @boards, renderer: BootstrapPagination::Rails %>
			  </div>
			</div>
		</div>
	</div>	
</div>