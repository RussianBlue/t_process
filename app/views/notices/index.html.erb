<div class="page-content">
	<%= render 'layouts/project_title' %>
	<div class="space-12"></div>
	
	<h3 class="header smaller lighter green"><%= current_category.name %> <small>글목록</small> </h3>

	<div class="table">
	  <table id="sample-table-1" class="table table-striped table-bordered table-hover">
	    <thead class="dark-purple">
	      <tr>
	        <th class="center">글 번호</th>
	        <th class="center">머릿말</th>
	        <th class="center">제목</th>
	        <th class="center">첨부파일</th>
	        <th class="center">작성자</th>
	        <th class="center">작성일</th>
	        <th class="center">조회수</th>
	      </tr>
	    </thead>

	    <tbody>
	      <% @boards.each do |board| %>
	        <tr>
	          <td><%= @page_num %></td>
	          <td class="center"><%= board.pre_title %></td>
	          <td>
	            <%= link_to board.title, notice_path(current_project, board) %>

	            <% if new_tag(board.created_at) == true %>
	              <span class="label label-warning">NEW</span>
	            <% end %>
	          </td>
	          <td class="center">
	            <% if board.data_file_name != nil %>
	              <%= link_to '<i class="ace-icon fa fa-download pink"></i>'.html_safe, download_notice_path(current_project, board), 
                :target => "_blank",
                'data-rel'       => 'tooltip', 
                'data-toggle'    => "tooltip", 
                'data-placement' => "bottom",
                'title' => board.data_file_name %>
	            <% end %>
	          </td>
	          <td class="center"><%= board.user.name %></td>
	          <td class="center"><%= board.created_at %></td>
	          <td class="center"><%= board.count_at %></td>
	        </tr>
	        <% @page_num += 1 %>
	      <% end %>
	    </tbody>
	  </table>
	  </div>
	  <div class="div-bottom-btnset">
	    <%= link_to '글쓰기', new_notice_path,
	                :class => 'btn btn-primary btn-sm' %>
	  </div>

	  <div class="center">
	    <%= will_paginate @boards, renderer: BootstrapPagination::Rails %>
	  </div>
	</div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('[data-rel=tooltip]').tooltip({container:'body'});
  });
</script>
